{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "bin",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": false,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "/node_modules/"
    ]
}